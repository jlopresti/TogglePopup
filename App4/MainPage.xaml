        <local:TogglePopup HorizontalAlignment="Center"
                                PopupPlacement="Above"
                                Grid.Column="2"
                                IsLightDismissEnabled="False"
                                VerticalAlignment="Center">
            <local:TogglePopup.PopupContent>
                Les médecins avec des ordinateurs. Corbis
            </local:TogglePopup.PopupContent>
        </local:TogglePopup>
